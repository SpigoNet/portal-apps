{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Artisan Serve",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/artisan",
            "args": [
                "serve"
            ],
            "preLaunchTask": "npm-dev",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "started on http://([0-9.]+):([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}